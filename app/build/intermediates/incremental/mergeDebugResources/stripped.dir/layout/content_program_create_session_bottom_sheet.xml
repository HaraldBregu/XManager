<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/colorBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sheet_create_session_title"
            android:layout_marginBottom="10dp">
        </TextView>
        <TextView
            android:id="@+id/description"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sheet_create_session_description"
            android:layout_marginBottom="20dp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ledTypeTitle"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/sheet_create_session_anim_type_title">
            </TextView>
            <RadioGroup
                android:id="@+id/radioGroupIndicator"
                android:checkedButton="@+id/blink_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <RadioButton
                    android:id="@+id/static_light"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/sheet_create_session_type_static"/>
                <RadioButton
                    android:id="@+id/blink_light"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sheet_create_session_type_blink"/>
                <RadioButton
                    android:id="@+id/fade_light"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sheet_create_session_type_fade"
                    android:enabled="false"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/shoePairImageViewContainer"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="270dp"
            android:background="@drawable/shoe_pair_light_off">
            <ImageView
                android:id="@+id/shoePairImageView"
                android:contentDescription="@string/activity_create_program_row_add_session_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shoe_pair_light_top">
            </ImageView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lightPositionTitle"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sheet_create_session_dir_title">
        </TextView>
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleButtonDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:checkedButton="@+id/top"
            android:layout_marginTop="10dp"
            app:singleSelection="true"
            app:selectionRequired="true">
            <Button
                android:id="@+id/extern"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:text="@string/sheet_create_session_dir_ext"/>
            <Button
                android:id="@+id/top_extern"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:text="@string/sheet_create_session_dir_top_ext"/>
            <Button
                android:id="@+id/top"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/sheet_create_session_dir_top"
                android:padding="0dp" />
            <Button
                android:id="@+id/top_intern"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:text="@string/sheet_create_session_dir_top_int"/>
            <Button
                android:id="@+id/intern"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/sheet_create_session_dir_int"
                android:padding="0dp" />
        </com.google.android.material.button.MaterialButtonToggleGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/durationTitle"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sheet_create_session_duration_title">
        </TextView>
        <TextView
            android:id="@+id/durationDescription"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sheet_create_session_duration_description">
        </TextView>
        <com.google.android.material.slider.Slider
            android:id="@+id/durationSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="104"
            android:value="0"
            android:stepSize="1"
            app:trackHeight="6dp"
            app:thumbRadius="12dp"
            app:labelBehavior="gone"/>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button"
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:enabled="false"
        android:text="@string/sheet_create_session_button_save">
    </com.google.android.material.button.MaterialButton>
</LinearLayout>
