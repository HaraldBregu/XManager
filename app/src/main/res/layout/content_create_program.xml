<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="it.ninespartans.xmanager.CreateProgramActivity"
    tools:showIn="@layout/activity_create_program">

    <LinearLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Program title"
            android:textSize="24dp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginBottom="5dp">
        </TextView>
        <TextView
            android:id="@+id/header_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please, get close to the devices and start testing by selecting the items above."
            android:fontFamily="@font/montserrat">
        </TextView>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameInputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title_activity_create_program_field_name"
            app:helperText=""
            android:layout_marginTop="10dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:imeOptions="actionDone"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_section"
        android:layout_below="@+id/top_section"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:padding="0dp"
        android:scrollbars="none"
        android:layout_marginBottom="0dp">
    </ListView>

    <LinearLayout
        android:id="@+id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveProgram"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="60dp"
            android:text="@string/title_activity_create_program_button_save"
            app:cornerRadius="5dp">
        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/createSession"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Session"
            android:layout_marginLeft="5dp"
            app:icon="@drawable/ic_add_plus"
            app:cornerRadius="5dp">
        </com.google.android.material.button.MaterialButton>
    </LinearLayout>

</RelativeLayout>