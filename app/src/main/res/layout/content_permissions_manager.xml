<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="it.ninespartans.xmanager.PermissionsManagerActivity"
    tools:showIn="@layout/activity_permissions_manager">

    <LinearLayout
        android:id="@+id/containerSection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        android:focusableInTouchMode="true">
        <TextView
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_permissions_title"
            android:textSize="28dp"
            android:textColor="@color/primaryDarkColor"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginBottom="5dp">
        </TextView>
        <TextView
            android:id="@+id/header_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/activity_permissions_description"
            android:textColor="@color/primaryDarkColor"
            android:fontFamily="@font/montserrat">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_permissions_bluetooth_title"
                android:textSize="20dp"
                android:textColor="@color/primaryDarkColor"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginBottom="5dp">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="@string/activity_permissions_bluetooth_description"
                android:textSize="12sp">
            </TextView>
            <LinearLayout
                android:id="@+id/ble_status_active_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/bleStatusImage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="@color/primarySuccessColor"
                    android:src="@drawable/ic_check_circle_green_24dp"/>
                <TextView
                    android:id="@+id/bleStatusTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/activity_permissions_bluetooth_status_active_text"
                    android:textSize="16dp"
                    android:textColor="@color/primaryDarkColor"
                    android:fontFamily="@font/roboto_medium">
                </TextView>
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/activateBluetooth"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/activity_permissions_bluetooth_active_button_title"
                android:backgroundTint="@color/primaryDarkColor"
                app:cornerRadius="5dp">
            </com.google.android.material.button.MaterialButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_permissions_fine_location_title"
                android:textSize="20dp"
                android:textColor="@color/primaryDarkColor"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginBottom="5dp">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="@string/activity_permissions_fine_location_description"
                android:textSize="12sp">
            </TextView>
            <RelativeLayout
                android:id="@+id/fine_location_status_active_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/fineLocationStatusImage"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:tint="@color/primarySuccessColor"
                        android:src="@drawable/ic_check_circle_green_24dp"/>
                    <TextView
                        android:id="@+id/fineLocationStatusTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/activity_permissions_fine_location_status_in_use_text"
                        android:textSize="16dp"
                        android:textColor="@color/primaryDarkColor"
                        android:fontFamily="@font/roboto_medium">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/settingsSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:id="@+id/settingsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_permissions_fine_location_go_to_settings_text"
                        android:textSize="14dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/primaryActiveColor"
                        android:fontFamily="@font/montserrat_bold">
                    </TextView>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:tint="@color/primaryActiveColor"
                        android:src="@drawable/ic_arrow_forward_24dp"/>
                </LinearLayout>

            </RelativeLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/activateFineLocation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/activity_permissions_fine_location_active_button_title"
                android:backgroundTint="@color/primaryDarkColor"
                app:cornerRadius="5dp">
            </com.google.android.material.button.MaterialButton>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:orientation="vertical">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="chiudi"
            android:backgroundTint="@color/primaryDarkColor"
            app:cornerRadius="5dp">
        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

</RelativeLayout>