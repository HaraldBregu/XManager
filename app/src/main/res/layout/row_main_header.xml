<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:elevation="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingTop="17dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <TextView
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="@string/main_header_description"
                android:textSize="14dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/user_section_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:id="@+id/userSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp">
                    <ImageView
                        android:id="@+id/userImageView"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/coach_avatar"
                        android:scaleType="centerCrop">
                    </ImageView>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/fullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Harald Bregu"
                        android:textSize="17sp" />
                    <TextView
                        android:id="@+id/userTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/roboto"
                        android:text="UEFA Pro 4"
                        android:textSize="12sp"
                        android:textStyle="normal"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/current_program_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/program"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/countDownTimerLabel"
                    android:layout_alignParentStart="true"
                    android:text="Programma" />
                <TextView
                    android:id="@+id/programTitle"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:layout_below="@+id/program"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Passaggio veloce con la sinistra"
                    android:layout_alignParentStart="true"
                    android:textSize="13dp"
                    android:textStyle="normal"/>
                <TextView
                    android:id="@+id/countDownTimerLabel"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:layout_marginTop="16dp"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="textEnd"/>
            </RelativeLayout>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/programProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:indeterminate="false"
                android:max="100"
                android:minWidth="200dp"
                android:minHeight="8dp"
                android:progress="40"
                app:trackThickness="6dp"
                app:trackCornerRadius="3dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/programSectionActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/selectProgram"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="@string/main_header_action_run_program" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/showProgramSectionMenu"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_alignParentEnd="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="14dp"
                    android:textAlignment="center"
                    android:text=""
                    android:textSize="12sp"
                    app:icon="@drawable/outline_list_alt_24"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>