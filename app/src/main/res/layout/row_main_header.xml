<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryColor"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/main_header_title"
                android:textColor="@color/primaryLargeTextColor90"
                android:textSize="30sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/roboto"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                android:textColor="@color/primaryTextColor85"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/user_section_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:id="@+id/userSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp">
                    <ImageView
                        android:id="@+id/userImageView"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_launcher_background"
                        android:scaleType="centerCrop">
                    </ImageView>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/fullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Harald Bregu"
                        android:textColor="@color/primaryTextColor90"
                        android:textSize="17sp" />
                    <TextView
                        android:id="@+id/userTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/roboto"
                        android:text="UEFA Pro 4"
                        android:textColor="@color/primaryTextColor85"
                        android:textSize="12sp"
                        android:textStyle="normal"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/current_program_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/programTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_toLeftOf="@+id/labelTimer"
                    android:layout_alignParentLeft="true"
                    android:text="Programma default"
                    android:textAllCaps="true"
                    android:textColor="@color/primaryTextColor85"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/programDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="In corso"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/programTitle"
                    android:textColor="@color/primaryTextColor85"
                    android:textSize="13dp"
                    android:textStyle="normal"/>
                <TextView
                    android:id="@+id/labelTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Completamento"
                    android:textAllCaps="true"
                    android:layout_marginTop="4dp"
                    android:layout_alignParentRight="true"
                    android:textAlignment="textEnd"
                    android:textColor="@color/primaryTextColor85"
                    android:textSize="10sp"
                    android:textStyle="normal"/>
                <TextView
                    android:id="@+id/countDownTimerLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="0"
                    android:layout_below="@+id/labelTimer"
                    android:layout_alignParentRight="true"
                    android:textAlignment="textEnd"
                    android:textColor="@color/primaryTextColor85"
                    android:textSize="15sp"
                    android:textStyle="normal"/>
            </RelativeLayout>

            <ProgressBar
                android:id="@+id/programProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:indeterminate="false"
                android:max="100"
                android:minWidth="200dp"
                android:minHeight="8dp"
                android:progress="0"
                android:progressDrawable="@drawable/horizontal_progress_drawable_red"
                android:progressTint="@color/primaryActionColor"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/programSectionActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/labelDescriptionCreateProgram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Seleziona un altro programma"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/primaryTextColor85"
                    android:textSize="12dp"
                    android:layout_centerVertical="true"
                    android:textStyle="normal"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/selectProgram"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/selectProgram"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toLeftOf="@id/showProgramSectionMenu"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/primaryDarkColor"
                    android:text="select program"
                    android:textSize="12dp">
                </com.google.android.material.button.MaterialButton>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/showProgramSectionMenu"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:layout_alignParentRight="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/primaryDarkColor"
                    android:text=""
                    android:textSize="12dp"
                    app:icon="@drawable/ic_list_white">
                </com.google.android.material.button.MaterialButton>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>