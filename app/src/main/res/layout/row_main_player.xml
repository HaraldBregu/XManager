<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dp"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <RelativeLayout
        android:id="@+id/container_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/card_shape">

        <LinearLayout
            android:id="@+id/statusLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/primaryActiveColor"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/statusLayout">
            <RelativeLayout
                android:id="@+id/header_view"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:paddingLeft="25dp"
                android:paddingRight="5dp"
                android:paddingTop="15dp"
                android:paddingBottom="0dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/textViewPlayerRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ruolo"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="6dp"
                        android:textStyle="normal"
                        android:textColor="@color/primaryDarkColor"/>
                    <TextView
                        android:id="@+id/textViewPlayerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="Mario Balotelli"
                        android:textColor="@color/primaryColor"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/showOptions"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="14dp"
                    app:icon="@drawable/ic_more_vert_white_24dp"
                    app:iconTint="@color/primaryColor"
                    android:textAlignment="center"
                    android:layout_alignParentRight="true">
                </com.google.android.material.button.MaterialButton>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/deviceInfoSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="25dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/deviceName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dispositivo: Dinamo Basic 1.0.0"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="13sp"
                        android:textColor="@color/primaryColor"/>
                </LinearLayout>
                <com.google.android.material.chip.ChipGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleLine="true">
                    <com.google.android.material.chip.Chip
                        android:id="@+id/leftChipDevice"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        app:chipIconSize="18dp"
                        app:chipIcon="@drawable/ic_check_circle_green_24dp"
                        android:textSize="13sp"
                        app:chipIconTint="@color/primaryActiveColor"
                        android:text="@string/row_player_device_left_title"/>
                    <com.google.android.material.chip.Chip
                        android:id="@+id/rightChipDevice"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        app:chipIcon="@drawable/ic_check_circle_green_24dp"
                        app:chipIconSize="18dp"
                        android:textSize="13sp"
                        app:chipIconTint="@color/primaryDisabledColor"
                        android:text="@string/row_player_device_right_title"/>
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/programSessionSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="25dp"
                android:layout_marginTop="20dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/programPlayerTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_toLeftOf="@+id/labelTimer"
                        android:layout_alignParentLeft="true"
                        android:text="Programma default"
                        android:textColor="@color/primaryDarkColor"
                        android:textSize="16dp" />
                    <TextView
                        android:id="@+id/programPlayerState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Pausa"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/programPlayerTitle"
                        android:textColor="@color/primaryDarkColor"
                        android:textSize="12dp"
                        android:textStyle="normal"/>
                    <TextView
                        android:id="@+id/programPlayerTimerTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Complentamento"
                        android:textAllCaps="true"
                        android:layout_marginTop="4dp"
                        android:layout_alignParentRight="true"
                        android:textAlignment="textEnd"
                        android:textColor="@color/primaryDarkColor"
                        android:textSize="10dp"
                        android:textStyle="normal"/>
                    <TextView
                        android:id="@+id/programPlayerTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="00:10:40"
                        android:layout_below="@+id/programPlayerTimerTitle"
                        android:layout_alignParentRight="true"
                        android:textAlignment="textEnd"
                        android:textColor="@color/primaryDarkColor"
                        android:textSize="16dp"
                        android:textStyle="normal"/>
                </RelativeLayout>
                <ProgressBar
                    android:id="@+id/playerProgressProgram"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressTint="@color/primaryActionColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:minHeight="6dp"
                    android:minWidth="200dp"
                    android:progress="30"
                    android:progressDrawable="@drawable/horizontal_progress_drawable_red"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/playPauseButton"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:icon="@drawable/ic_play_white"
                    app:iconTint="@color/primaryTextColor"
                    android:layout_marginRight="5dp"
                    android:textSize="12dp"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="@color/primaryDarkColor">
                </com.google.android.material.button.MaterialButton>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/programSelection"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginRight="5dp"
                    android:text="select"
                    android:textSize="12dp"
                    android:backgroundTint="@color/primaryDarkColor">
                </com.google.android.material.button.MaterialButton>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/updateDevices"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginRight="5dp"
                    android:text="Update"
                    android:textSize="12dp"
                    android:backgroundTint="@color/primaryDarkColor">
                </com.google.android.material.button.MaterialButton>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>