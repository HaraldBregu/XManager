<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_program_sheet_title"
            android:textSize="24dp"
            android:textColor="@color/primaryDarkColor"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginBottom="10dp">
        </TextView>
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_program_sheet_description"
            android:textSize="14dp"
            android:textColor="@color/primaryDarkColor"
            android:fontFamily="@font/montserrat"
            android:layout_marginBottom="20dp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/playerNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Terry"
            android:textSize="20sp"
            android:textColor="@color/primaryDarkColor"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginBottom="5dp">
        </TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/progressBarTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/shoePairContainer"
                android:text="Piede sinistro. Caricamento programma..."
                android:textSize="14dp"
                android:layout_centerVertical="true"
                android:textColor="@color/primaryDarkColor"
                android:fontFamily="@font/montserrat">
            </TextView>
            <LinearLayout
                android:id="@+id/shoePairContainer"
                android:layout_width="24dp"
                android:layout_height="32dp"
                android:padding="0dp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/leftShoeImage"
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/left_unactive">
                </ImageView>
                <ImageView
                    android:id="@+id/rightShoeImage"
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/right_unactive">
                </ImageView>
            </LinearLayout>
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/uploadProgressProgram"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressTint="@color/primaryActiveColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:indeterminate="false"
            android:max="100"
            android:minHeight="10dp"
            android:minWidth="200dp"
            android:progress="30"
            android:progressDrawable="@drawable/horizontal_progress_drawable_red"/>
    </LinearLayout>

</LinearLayout>