<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="it.ninespartans.xmanager.DevicePairSearchActivity"
    tools:showIn="@layout/activity_device_pair_search">

    <LinearLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewPlayerNameDetailTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="player name"
            android:textAllCaps="true"
            android:fontFamily="@font/roboto_regular"
            android:textSize="10dp"
            android:textStyle="normal"
            android:textColor="@color/primaryDarkColor"/>
        <TextView
            android:id="@+id/deviceSearchTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="24dp"
            android:textColor="@color/primaryDarkColor"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginBottom="5dp">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please, get close to the devices and start testing by selecting the items above."
            android:textColor="@color/primaryDarkColor"
            android:fontFamily="@font/montserrat">
        </TextView>

    </LinearLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:layout_below="@+id/top_section"
        android:layout_above="@+id/bottom_section">
    </ListView>

    <LinearLayout
        android:id="@+id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/searchDevicesButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Search Devices"
            android:backgroundTint="@color/primaryDarkColor"
            app:cornerRadius="5dp">
        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/debugButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Debug"
            android:backgroundTint="@color/primaryDarkColor"
            app:cornerRadius="5dp">
        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/closeButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Close"
            android:textColor="@color/primaryDarkColor"
            android:backgroundTint="@color/primaryTextColor"
            app:cornerRadius="5dp">
        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

</RelativeLayout>